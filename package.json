{
  "name": "static-pepper",
  "version": "0.0.1",
  "description": "Pedro's static website development environment",
  "author": "Pedro Pimenta <pedro@pimenta.co> (http://pimenta.co/)",
  "scripts": {
    "sass": "node-sass --output-style nested --indent-type spaces --indent-width 2 -o dist/assets source/styles",
    "autoprefixer": "postcss -u autoprefixer -r dist/assets/*.css",
    "eslint": "eslint source/scripts",
    "uglifyjs": "mkdir -p dist/assets && uglifyjs source/scripts/*.js -m -o dist/assets/main.js && uglifyjs source/scripts/*.js -m -o dist/assets/main.min.js",
    "webpack": "webpack",
    "imagemin": "imagemin source/images/* --out-dir=dist/assets/images/",
    "serve": "browser-sync start --server --ss 'dist/' --files 'dist/assets/**/*.css, dist/assets/**/*.js, dist/**/*.html'",
    "build:html": "eleventy",
    "build:images": "npm run imagemin",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "npm run webpack",
    "build:all": "npm run build:css && npm run build:js && npm run build:html && npm run build:images",
    "watch:html": "onchange 'source/content/**/*.*' -- npm run build:html",
    "watch:images": "onchange 'source/images/**/*.*' -- npm run build:images",
    "watch:css": "onchange 'source/styles/**/*.s*ss' -- npm run build:css",
    "watch:js": "onchange 'source/scripts/**/*.js' -- npm run build:js",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:html' 'npm run watch:css' 'npm run watch:js' 'npm run watch:images'"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.5.4",
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "autoprefixer": "^9.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "eslint": "^5.7.0",
    "eslint-loader": "^2.1.1",
    "imagemin": "^6.0.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.4",
    "onchange": "^5.0.2",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^6.0.1",
    "uglify-es": "^3.3.9",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "dependencies": {
    "tether": "^1.4.5",
    "tether-drop": "^1.4.2"
  }
}
